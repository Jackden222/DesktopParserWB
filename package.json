{
  "name": "parser",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Wildberries Parser - Desktop application for parsing Wildberries data",
  "dependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@electron/remote": "^2.1.3",
    "@supabase/supabase-js": "^2.52.0",
    "axios": "^1.11.0",
    "babel-loader": "^10.0.0",
    "electron-updater": "^6.6.2",
    "exceljs": "^4.4.0",
    "node-fetch": "^2.7.0",
    "node-machine-id": "^1.1.12",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-runtime": "^7.28.0",
    "@babel/runtime": "^7.28.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "Telegram:@PavelQSS",
    "productName": "WildberriesParser",
    "icon": "build/icon.ico",
    "publish": null,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!build/installer.nsh",
      "!build/win.nsh",
      "!build/installer-sidebar.bmp",
      "!build/uninstaller-sidebar.bmp",
      "!build/installer-header.bmp"
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}.${ext}",
      "verifyUpdateCodeSignature": false,
      "extraResources": [
        {
          "from": "build/icon.ico",
          "to": "icon.ico"
        }
      ],
      "executableName": "WildberriesParser"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "shortcutName": "WildberriesParser",
      "deleteAppDataOnUninstall": false,
      "perMachine": false,
      "runAfterFinish": false,
      "include": "build/installer.nsh",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerSidebar": "build/installer-sidebar.bmp",
      "uninstallerSidebar": "build/uninstaller-sidebar.bmp",
      "installerHeader": "build/installer-header.bmp",
      "guid": "com.wildberries.parser",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "icon": "build/wildberris.png"
    }
  }
}
